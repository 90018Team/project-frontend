<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<!-- TODO: It is better to have every String literal to be in the strings.xml ...Caleb   -->
    <PreferenceCategory
        app:key="app_category"
        app:title="@string/app_setting">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"
            app:summary="It does nothing for now -------Caleb"
            />
        <EditTextPreference
            app:key="default message"
            app:title="@string/default_message_title"
            app:summary="message that's been sent after triggering the emergency"
            />
        <Preference
            app:key="logout"
            app:title="@string/string_log_out"
            />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="privacy_category"
        app:title="Privacy settings">

        <SwitchPreferenceCompat
            app:key="broadcast"
            app:title="Enable emergency broadcasting"
            app:summary="It does nothing for now -------Caleb"
            />

    </PreferenceCategory>
    <PreferenceCategory
        app:key="feedback_category"
        app:title="Have your say">

        <Preference
            app:key="feedback"
            app:title="Send feedback"
            app:summary="Report technical issues or suggest new features"/>

    </PreferenceCategory>



</PreferenceScreen>